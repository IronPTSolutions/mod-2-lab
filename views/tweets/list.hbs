<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Twitter Home</h1>
        {{#if currentUser}}
          <div class="mb-3 d-flex border-bottom pb-3">
            <a class="btn btn-primary" href="/tweets/new">New Tweet</a>
          </div>
        {{/if}}
        <div class="row mb-5">
          {{#each tweets as |tweet|}}
            <div class="col-md-6">
            {{> tweet tweet=tweet}}            
            </div>
          {{/each}}
        </div>
    </div>
  </div>
</div>